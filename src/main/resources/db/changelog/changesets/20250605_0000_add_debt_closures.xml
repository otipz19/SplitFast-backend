<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">

    <changeSet id="20250605_0000_add_debt_closures" author="stasp">
        <createTable tableName="debt_closures">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_debt_closures"/>
            </column>
            <column name="from_user_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_debt_closures_from_on_users"
                             referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="to_user_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_debt_closures_to_on_users"
                             referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="amount" type="numeric(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="time_created" type="datetime">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>