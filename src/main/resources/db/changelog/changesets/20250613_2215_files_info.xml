<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20250613_2215_files_info" author="Mykola Prybysh">
        <createTable tableName="files_info">
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="pk_files_info" />
            </column>
            <column name="file_type" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="bound_entity_id" type="int">
                <constraints nullable="false" />
            </column>
            <column name="mime_type" type="varchar(255)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createIndex tableName="files_info" indexName="idx_files_info_on_type_and_entity_id" unique="false">
            <column name="file_type"/>
            <column name="bound_entity_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>