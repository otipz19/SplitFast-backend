<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd" >

    <changeSet id="1748686952473-1" author="stasp">
        <createTable tableName="contact_requests">
            <column name="id" type="int" autoIncrement="true" >
                <constraints primaryKey="true" primaryKeyName="pk_contact_requests"/>
            </column>
            <column name="from_user_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_contact_requests_from_on_users"
                             referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="to_user_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_contact_requests_to_on_users"
                             referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="time_created" type="datetime">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="contact_requests" columnNames="from_user_id, to_user_id" constraintName="ak_contact_requests_users"/>
    </changeSet>

</databaseChangeLog>