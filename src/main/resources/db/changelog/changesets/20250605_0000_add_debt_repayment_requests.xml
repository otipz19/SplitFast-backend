<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">

    <changeSet id="20250605_0000_add_debt_repayment_requests" author="stasp">
        <createTable tableName="debt_repayment_requests">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_debt_repayment_requests"/>
            </column>
            <column name="from_user_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_debt_repayment_requests_from_on_users"
                             referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="to_user_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_debt_repayment_requests_to_on_users"
                             referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="amount" type="numeric(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="time_created" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="time_updated" type="datetime" />
        </createTable>
    </changeSet>

</databaseChangeLog>
