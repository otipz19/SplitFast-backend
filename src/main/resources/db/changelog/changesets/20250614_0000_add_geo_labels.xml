<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">

    <changeSet id="20250614_0000_add_geo_labels" author="stasp">
        <createTable tableName="geo_labels">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_geo_labels" />
            </column>
            <column name="activities_group_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_geo_labels_on_activities_groups"
                             referencedTableName="activities_groups" referencedColumnNames="id" />
            </column>
            <column name="owner_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_geo_labels_on_users"
                             referencedTableName="users" referencedColumnNames="id" />
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="varchar(1000)"/>
            <column name="latitude" type="double">
                <constraints nullable="false" />
            </column>
            <column name="longitude" type="double">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addColumn tableName="activities">
            <column name="geo_label_id" type="int"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="activities" baseColumnNames="geo_label_id"
                                 referencedTableName="geo_labels" referencedColumnNames="id"
                                 constraintName="fk_activities_on_geo_labels" onDelete="SET NULL" />
    </changeSet>
</databaseChangeLog>