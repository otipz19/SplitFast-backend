<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1749138068565-1" author="stasp">
        <createTable tableName="debt_closures">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_debt_closures"/>
            </column>
            <column name="sum" type="DECIMAL(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="time_created" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="first_user_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_debt_closures_first_user"
                             referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="second_user_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_debt_closures_second_user"
                             referencedTableName="users" referencedColumnNames="id"/>
            </column>
        </createTable>

        <addUniqueConstraint
                tableName="debt_closures"
                columnNames="id"
                constraintName="uk_debt_closures_id"/>
    </changeSet>

</databaseChangeLog>