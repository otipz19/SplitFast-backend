<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd" >

    <changeSet id="20250603_1642_add_activities_group_invitations" author="Mykola Prybysh">
        <createTable tableName="activities_group_invitations">
            <column name="id" type="int" autoIncrement="true" >
                <constraints primaryKey="true" primaryKeyName="pk_activities_group_invitations"/>
            </column>
            <column name="from_user_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_activities_group_invitations_from_on_users"
                             referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="to_user_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_activities_group_invitations_to_on_users"
                             referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="activities_group_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_activities_group_invitations_on_activities_groups"
                             referencedTableName="activities_groups" referencedColumnNames="id"/>
            </column>
            <column name="time_created" type="datetime">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="activities_group_invitations" columnNames="to_user_id, activities_group_id"
                             constraintName="ak_activities_group_invitations_to_user_id_activities_group_id"/>
    </changeSet>

</databaseChangeLog>